gutter = 24px
maxContentWidth = 1040px

astral = #2d6471
avocado = #acf07d
maize = #f6db60
pacific = #48a9bf
pacificAA = #1EA0B6
parchment = #fbfaf7

pathway = 'Pathway Gothic One', sans-serif

*
    box-sizing border-box

    &::after, &::before
        box-sizing border-box

img
    height auto
    max-width 100%
    vertical-align bottom

$gutterize
    padding 0 gutter
    margin 0 auto
    max-width maxContentWidth

$headline
    font-family pathway
    font-size 80px
    line-height 84px
    text-transform uppercase

$introText
    font-size 26px
    line-height 34px

$paragraph
    font-size 20px
    line-height 28px

$linkButton
    background-color astral
    border 2px solid avocado
    color white
    display block
    font-size 20px
    line-height 28px
    font-weight bold
    padding 10px 14px
    text-align center
    text-decoration none

$jobTitle
    font-size 14px
    font-weight bold
    letter-spacing 0.8px
    line-height 1
    text-transform uppercase

$personName
    font-family pathway
    font-size 40px
    line-height 42px
    text-transform uppercase

body
    font-family 'Lato', 'Arial', sans-serif

.header
    background-color pacific
    padding 20px 0

.introduction
    background-color parchment
    padding 35px 0 45px

    &__guttered
        @extend $gutterize

    &__title
        @extend $headline
        color pacificAA
        margin-bottom 20px

    &__intro-paragraph
        @extend $introText
        color astral
        margin-bottom 16px

    &__long-details
        @extend $paragraph
        color astral
        margin-bottom 32px

    &__job-link
        @extend $linkButton

.meet
    background-color parchment

    &__heading
        @extend $headline
        @extend $gutterize
        color pacificAA
        padding-top 40px
        padding-bottom 40px

    &__people
        margin 0 auto
        max-width maxContentWidth

        @media (min-width 700px)
            display flex

    &__person-section
        flex 1 1 0
        padding 30px 0 0 0

        &--astral
            background-color astral
            color white

        &--avocado
            background-color avocado
            color astral

        &--maize
            background-color maize
            color astral

    &__title
        @extend $gutterize
        @extend $jobTitle
        margin-bottom 8px

        &--maize
            color maize

    &__name
        @extend $gutterize
        @extend $personName
        margin-bottom 20px

    &__photo-container
        margin 0 24px

    &__person-stuff
        @extend $gutterize
        font-size 20px
        line-height 28px
        padding-top 30px
        padding-bottom 30px

.other-nauts
    background-color parchment

    &__guttered
        @extend $gutterize

    &__heading
        @extend $headline
        color pacificAA
        padding-top 40px
        padding-bottom 40px

    &__photos
        display grid
        grid-template-columns 1fr 1fr
        grid-gap 24px

        @media (min-width 700px)
            grid-template-columns repeat(4, 1fr)

    &__photo-container
        overflow hidden
        perspective 200px
        position relative

    &__info
        align-items center
        background-color maize
        bottom 0
        color white
        display flex
        flex-direction column
        left 0
        justify-content center
        position absolute
        right 0
        text-align center
        top 0
        transform rotateY(180deg)
        transform-origin 0 0
        transition transform 250ms ease-in-out

        &--right-side
            transform rotateY(-180deg)
            transform-origin 100% 0

    &__photo-container:hover &__info
        transform rotateY(0deg)

    &__title
        @extend $jobTitle
        color astral

    &__name
        @extend $personName
        color astral

.cool-links
    background-color parchment

    &__heading
        @extend $gutterize
        @extend $headline
        color pacificAA
        padding-top 40px
        padding-bottom 40px